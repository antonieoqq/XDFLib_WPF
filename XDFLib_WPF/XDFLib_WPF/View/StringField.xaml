<local:FieldBase
    x:Class="XDFLib_WPF.View.StringField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XDFLib_WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Self"
    MinWidth="60"
    d:DesignHeight="20"
    d:DesignWidth="80"
    mc:Ignorable="d">
    <TextBox
        x:Name="InputBox"
        HorizontalAlignment="{Binding ElementName=Self, Path=HorizontalAlignment}"
        VerticalAlignment="{Binding ElementName=Self, Path=VerticalAlignment}"
        AcceptsReturn="{Binding ElementName=Self, Path=AcceptsReturn}"
        Background="{Binding ElementName=Self, Path=Background}"
        BorderBrush="Transparent"
        BorderThickness="0"
        Foreground="{Binding ElementName=Self, Path=Foreground}"
        Text="{Binding ElementName=Self, Path=Value}"
        TextAlignment="{Binding ElementName=Self, Path=TextAlignment}"
        TextWrapping="{Binding ElementName=Self, Path=Wraping}" />
</local:FieldBase>
