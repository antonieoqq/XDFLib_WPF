<UserControl
    x:Class="XDFLib_WPF.View.WindowTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XDFLib_WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Self"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Border
            Background="{Binding ElementName=Self, Path=TitleBackground}"
            BorderBrush="{Binding ElementName=Self, Path=TitleBorderBrush}"
            BorderThickness="{Binding ElementName=Self,Path=TitleBorderThickness}"
            CornerRadius="{Binding ElementName=Self,Path=TitleCorner}"
            MouseLeftButtonDown="TitleClick"
            MouseMove="WindowMove">
            <DockPanel Margin="8,4,8,4">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="{Binding ElementName=Self, Path=TitleFontSize}"
                    Foreground="{Binding ElementName=Self, Path=TitleForeground}"
                    Text="{Binding ElementName=Self, Path=Title}" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Width="{Binding ElementName=Self, Path=IconSize}"
                        Height="{Binding ElementName=Self, Path=IconSize}"
                        Background="{Binding ElementName=Self, Path=MinimizeBrush}"
                        BorderBrush="{Binding ElementName=Self, Path=IconBorderBrush}"
                        BorderThickness="{Binding ElementName=Self, Path=IconBorderThickness}"
                        Click="MinimizeWindow" />
                    <Button
                        Width="{Binding ElementName=Self, Path=IconSize}"
                        Height="{Binding ElementName=Self, Path=IconSize}"
                        Margin="{Binding ElementName=Self, Path=IconGapMargin}"
                        Background="{Binding ElementName=Self, Path=MaximizeBrush}"
                        BorderBrush="{Binding ElementName=Self, Path=IconBorderBrush}"
                        BorderThickness="{Binding ElementName=Self, Path=IconBorderThickness}"
                        Click="MaximizeWindow" />
                    <Button
                        Width="{Binding ElementName=Self, Path=IconSize}"
                        Height="{Binding ElementName=Self, Path=IconSize}"
                        Background="{Binding ElementName=Self, Path=CloseBrush}"
                        BorderBrush="{Binding ElementName=Self, Path=IconBorderBrush}"
                        BorderThickness="{Binding ElementName=Self, Path=IconBorderThickness}"
                        Click="CloseWindow" />
                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
