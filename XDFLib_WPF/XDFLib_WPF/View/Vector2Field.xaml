<local:FieldBase
    x:Class="XDFLib_WPF.View.Vector2Field"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XDFLib_WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Self"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type local:Vector2Field}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="LabelBackground" Value="Transparent" />
            <Setter Property="LabelForeground" Value="Black" />
            <Setter Property="FieldBackground" Value="Transparent" />
            <Setter Property="FieldForeground" Value="Black" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="40" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="40" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            Margin="0,0,3,0"
            VerticalAlignment="{Binding ElementName=Self, Path=VerticalAlignment}"
            Background="{Binding ElementName=Self, Path=LabelBackground}"
            Foreground="{Binding ElementName=Self, Path=LabelForeground}"
            Text="X" />
        <local:FloatField
            x:Name="InputX"
            Grid.Column="1"
            VerticalAlignment="{Binding ElementName=Self, Path=VerticalAlignment}"
            Background="{Binding ElementName=Self, Path=FieldBackground}"
            BorderBrush="{Binding ElementName=Self, Path=FieldBorderBrush}"
            BorderThickness="{Binding ElementName=Self, Path=FieldBorderThickness}"
            Foreground="{Binding ElementName=Self, Path=FieldForeground}"
            Value="{Binding ElementName=Self, Path=X}" />

        <TextBlock
            Grid.Column="2"
            Margin="3,0,3,0"
            VerticalAlignment="{Binding ElementName=Self, Path=VerticalAlignment}"
            Background="{Binding ElementName=Self, Path=LabelBackground}"
            Foreground="{Binding ElementName=Self, Path=LabelForeground}"
            Text="Y" />
        <local:FloatField
            x:Name="InputY"
            Grid.Column="3"
            VerticalAlignment="{Binding ElementName=Self, Path=VerticalAlignment}"
            Background="{Binding ElementName=Self, Path=FieldBackground}"
            BorderBrush="{Binding ElementName=Self, Path=FieldBorderBrush}"
            BorderThickness="{Binding ElementName=Self, Path=FieldBorderThickness}"
            Foreground="{Binding ElementName=Self, Path=FieldForeground}"
            Value="{Binding ElementName=Self, Path=Y}" />

    </Grid>
</local:FieldBase>
