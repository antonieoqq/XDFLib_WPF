<local:FieldBase
    x:Class="XDFLib_WPF.View.BooleanField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:XDFLib_WPF.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XDFLib_WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Self"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVisib" />
        <Style TargetType="{x:Type local:BooleanField}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <Border
            Width="14"
            Height="14"
            BorderBrush="{Binding ElementName=Self, Path=Foreground}"
            BorderThickness="1">
            <Rectangle
                Margin="2"
                Fill="{Binding ElementName=Self, Path=Foreground}"
                StrokeThickness="0"
                Visibility="{Binding ElementName=Self, Path=Value, Converter={StaticResource BoolToVisib}}" />
        </Border>
        <TextBlock
            Margin="2,0,0,0"
            Foreground="{Binding ElementName=Self, Path=TextColor}"
            Text="{Binding ElementName=Self, Path=Text}" />
    </DockPanel>
</local:FieldBase>
