<local:FieldBase
    x:Class="XDFLib_WPF.View.UIntegerField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XDFLib_WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Self"
    d:DesignHeight="20"
    d:DesignWidth="60"
    mc:Ignorable="d">
    <TextBox
        x:Name="InputBox"
        Background="{Binding ElementName=Self, Path=Background}"
        BorderBrush="Transparent"
        BorderThickness="0"
        Foreground="{Binding ElementName=Self, Path=Foreground}"
        Text="{Binding ElementName=Self, Path=Value}" />
</local:FieldBase>
